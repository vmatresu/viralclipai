rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================================================
    // Helper Functions
    // ========================================================================

    // Check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if the user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check if the user has the 'superadmin' role
    // Note: This requires a 'role' field on the user's document
    function isSuperAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // ========================================================================
    // Collection Rules
    // ========================================================================

    // ------------------------------------------------------------------------
    // Users Collection
    // Pattern: /users/{userId}
    // ------------------------------------------------------------------------
    match /users/{userId} {
      // Owners can read their own profile
      allow read: if isOwner(userId);
      
      // Writes are restricted to the Backend API (via Admin SDK) to ensure
      // business logic (quotas, plan updates) is strictly enforced.
      // Exceptions can be made here for specific user-editable fields (e.g. displayName)
      // if direct client updates are desired.
      allow write: if false; 

      // ----------------------------------------------------------------------
      // Videos Subcollection
      // Pattern: /users/{userId}/videos/{videoId}
      // ----------------------------------------------------------------------
      match /videos/{videoId} {
        // Owners can read their own video metadata
        allow read: if isOwner(userId);
        
        // Writes restricted to Backend API
        allow write: if false;
      }
    }

    // ------------------------------------------------------------------------
    // Admin Configuration
    // Pattern: /admin/{configDoc}
    // ------------------------------------------------------------------------
    match /admin/{configDoc} {
      // Only superadmins can read/write global config
      allow read, write: if isSuperAdmin();
    }

    // ------------------------------------------------------------------------
    // Plans Collection
    // Pattern: /plans/{planId}
    // ------------------------------------------------------------------------
    match /plans/{planId} {
      // All authenticated users can read active plans (for pricing page, etc.)
      allow read: if isAuthenticated();
      
      // Only superadmins can create/update/delete plans
      // Writes are restricted to Backend API (via Admin SDK) to ensure
      // business logic is strictly enforced
      allow write: if false;
    }

    // ------------------------------------------------------------------------
    // Default Deny
    // ------------------------------------------------------------------------
    // All other collections/documents are denied by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
