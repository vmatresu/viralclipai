# Backend (FastAPI) environment example for local development
# Copy to .env.api.dev and adjust values.

LOG_LEVEL=DEBUG

GEMINI_API_KEY=your_gemini_api_key_here

FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CREDENTIALS_PATH=/absolute/path/to/firebase-service-account.json

# Cloudflare R2 (S3-compatible)
R2_ACCOUNT_ID=your_r2_account_id
R2_BUCKET_NAME=your_r2_dev_bucket
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_ENDPOINT_URL=https://your_r2_account_id.r2.cloudflarestorage.com

TIKTOK_API_BASE_URL=https://your-dev-tiktok-upload-endpoint

# Localhost hosts/origins for dev
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
