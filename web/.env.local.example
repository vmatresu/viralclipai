# Backend API URL (Rust backend for video processing)
# For local development: http://localhost:8000
# For Docker: http://api:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# =============================================================================
# Firebase Configuration
# =============================================================================

# Required: Firebase Web SDK config (client-side)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-web-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Optional: Firebase Analytics (Google Analytics 4)
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Required for server-side: Firebase Admin SDK
# Option 1: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# Option 2: Service account JSON as string (for Vercel/deployment)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# =============================================================================
# Stripe Billing Configuration
# =============================================================================

# Stripe API Keys - Get from Stripe Dashboard > Developers > API keys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Public key for Stripe.js (client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Price IDs - Create in Stripe Dashboard > Products
# Pro Plan ($29/month, $290/year)
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_ANNUAL=price_...

# Studio Plan ($99/month, $990/year)
STRIPE_PRICE_STUDIO_MONTHLY=price_...
STRIPE_PRICE_STUDIO_ANNUAL=price_...

# Public price IDs for frontend display
NEXT_PUBLIC_STRIPE_PRICE_PRO_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_PRO_ANNUAL=price_...
NEXT_PUBLIC_STRIPE_PRICE_STUDIO_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_STUDIO_ANNUAL=price_...
