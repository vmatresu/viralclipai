# Backend (FastAPI) environment example for Viral Clip AI
# Copy to .env.api and adjust values for your environment.

# Logging
LOG_LEVEL=INFO

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Admin / Firestore (backend)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-service-account.json

# Cloudflare R2 (S3-compatible)
R2_ACCOUNT_ID=your_r2_account_id
R2_BUCKET_NAME=your_r2_bucket_name
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
# Optional explicit endpoint; if empty, derived from R2_ACCOUNT_ID
R2_ENDPOINT_URL=https://your_r2_account_id.r2.cloudflarestorage.com

# TikTok integration
TIKTOK_API_BASE_URL=https://your-tiktok-upload-endpoint

# Security / domains (production example)
ALLOWED_HOSTS=api.viralvideoai.io,viralvideoai.io,www.viralvideoai.io
CORS_ORIGINS=https://viralvideoai.io,https://www.viralvideoai.io

# Environment (development | production)
ENVIRONMENT=production

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
WS_RATE_LIMIT_CONNECTIONS=10
WS_RATE_LIMIT_WINDOW=60

# Request Size Limits (bytes)
MAX_REQUEST_SIZE=10485760
